<div class="detail_page content_margin">
  <h1>Let Me Help You To Fix Your Problem!</h1>
  <p>Writer: <%=@user.name%></p>
  <p>Title: <%=@idea.title%></p>
  <p>How to fix this problem? <%=@idea.description%></p>
  <p>comments</p>
  <ul>
    <%@comments.each do |comment|%>
      <li><%=comment.id%></li>
    <%end%>
  </ul>
  <form action="/comment/<%=@idea.id%>" method="post">
    <% if logged_in?%>
      <textarea name="comment" type="text"></textarea>
      <button>share</button>
    <%end%>
  </form>
  <%if logged_in? && @idea.user_id == current_user.id%>
    <div>
      <form action="/ideas/<%=@idea.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>Delete</button>
        <a href="/ideas/detail/<%=@idea.id%>/edit">edit</a>
      </form>
    </div>
  <%end%>
</div>
