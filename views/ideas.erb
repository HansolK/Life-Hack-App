<div class="search_bar">
  <form action="/ideas/filter">
  <input name="search_item"type="text"/>
  <button class="search">search</button>
  </form>
</div>


<div class="list_ideas_page content_margin">
  <%@ideas.each do |idea|%> <%user=User.find_by(id: idea.user_id)%>
  <div>
    <a href="/ideas/detail/<%=idea.id%>">
     <p><%=idea.title.empty? ? "No title" :  idea.title%></p>
    </a>
  </div>
  <div>
    <p>written by: <%=user.name%></p>
    <p>written at: <%=idea.created_at%></p>
  </div>
  <%end%>
</div>
